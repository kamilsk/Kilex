{
  "name": "kamilsk/kilex",
  "type": "library",
  "description": "Bridge between Cilex and Silex.",
  "keywords": ["cilex", "silex", "bridge"],
  "homepage": "https://github.com/kamilsk/Kilex",
  "license": "MIT",
  "authors": [
    { "name": "Kamil Samigullin", "email": "kamil@samigullin.info", "role": "lead" }
  ],
  "require": {
    "php": ">=5.5",
    "kamilsk/common": "~2.0"
  },
  "require-dev": {
    "cilex/cilex": "~1.0",
    "silex/silex": "~1.0",
    "symfony/config": "~2.0|~3.0"
  },
  "suggest": {
    "cilex/cilex": "to integrate with Cilex (~1.0 is recommended)",
    "silex/silex": "to integrate with Silex (~1.0 is recommended)",
    "symfony/config": "for use ConfigServiceProvider (~3.0 is recommended)"
  },
  "autoload": {
    "psr-4": { "OctoLab\\Kilex\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "OctoLab\\Kilex\\": "tests/" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "support": {
    "irc": "irc://irc.gitter.im/kamilsk/small-tools",
    "issues": "https://github.com/kamilsk/Kilex/issues"
  }
}
